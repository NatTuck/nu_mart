<h2>Show Product</h2>

<ul>

  <li>
    <strong>Name:</strong>
    <%= @product.name %>
  </li>

  <li>
    <strong>Price:</strong>
    <%= @product.price %>
  </li>

  <li>
    <strong>Desc:</strong>
    <%= @product.desc %>
  </li>

</ul>

<p>
<span><%= link "Edit", to: product_path(@conn, :edit, @product) %></span>
<span><%= link "Back", to: product_path(@conn, :index) %></span>
</p>

<h2>Add to Cart</h2>

<%= form_for @cart_item, cart_item_path(@conn, :create), fn f -> %>
  <%= hidden_input f, :cart_id %>
  <%= hidden_input f, :product_id %>

  <%= if @cart_item.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <div class="form-group">
    <%= label f, :count, class: "control-label" %>
    <%= number_input f, :count, class: "form-control" %>
    <%= error_tag f, :count %>
  </div>

  <div class="form-group">
    <%= submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>

